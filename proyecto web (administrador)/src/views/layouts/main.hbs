<!-- Ser agregan estilos al los archivos -->
<style>
  a {
    text-decoration: none;
    color: rgb(255, 208, 0);
  }

  .background {
    background-color: rgb(214, 214, 214);
    /*background-image: url(./images/fondo.jpg);*/
    width: 100%;
    left: 100%;
