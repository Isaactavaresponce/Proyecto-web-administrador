  h2 {
    color: rgb(0, 0, 0);
    margin-left: 10px;
		margin-top: 10px;
		margin: -10px;
  
  }

  .form-control {
    background-color: rgba(255, 255, 255, 0);
    border-top: none;
    border-right: none;
    border-left: none;
    border-color: black;
  }

  label,
  span {
    color: rgb(61, 61, 61);
  }

  .pillButton {
    color: rgb(170, 170, 170);
  }

  .pillButton:focus,
  .pillButton:hover {
    color: #ffb936;
  }

  .submitError {
    color: rgb(255, 113, 113);
