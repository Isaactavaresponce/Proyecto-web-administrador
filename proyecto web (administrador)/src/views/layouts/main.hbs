    color:#ffffff;
    padding-top:20px;
    padding-bottom:20px;
    padding-left:40px;
    padding-right:40px;
    background-color:#ffa600e0;
  }
  .dropdown-item:hover{
    background-color: #fdaf1da6;
    color: black;
  }

  .dropdown{
    border-style: none;
  }

  .nav-link{
    border-radius: 5px;
    font-size:18px;
    color:#3b3b3bd8;
  }
  .nav-link:hover{
    background-color: #ffa600a6;
  }

 .img{
    width: 50px;
		
 }

