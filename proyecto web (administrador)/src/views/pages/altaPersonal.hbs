<script src="/js/validacion.js"></script>

<body class="alta-personal">
	<script src="/src/public/js/script"></script>
	<div class="container w-50 px-5 pb-5 my-5">
		<div class="row">
			<div class="col">
				<h1 class="fw-bold text-center pt-5 mb-5"> Registro de empleados </h1>
				<form class="form" action="/registraPer" method="post" onsubmit="return validar ();">


					<div class="mb-4">
						<label for="apellido" class="form-label"> Apellido (s) </label>
						<input type="text" id="apellido" name="apellido" class="form-control text-bg-light"
							pattern="[A-Z a-z áéíóúÁÉÍÓÚñÑ]*" minlength="4" maxlength="40" required>
					</div>

					<div class="mb-4">
						<label for="nombre" class="form-label"> Nombre </label>
						<input type="text" id="nombre" name="nombre" class="form-control text-bg-light"
							pattern="[A-Z a-z áéíóúÁÉÍÓÚñÑ]*" minlength="3" maxlength="30" required>
					</div>

					<div class="mb-4">
						<label for="telefono" class="form-label"> Número de teléfono </label>
						<input type="tel" id="tel" name="telefono" class="form-control text-bg-light" minlength="10"
							maxlength="10" pattern="[0-9]+" required>
					</div>

					<div class="mb-4">
						<label for="email" class="form-label"> Email </label>
						<input type="email" id="email" name="email" class="form-control text-bg-light" minlength="0"
							maxlength="50" required>
					</div>

					<div class="mb-4">
						<label for="password" class="form-label"> Contraseña </label>
						<input type="password" id="password" name="password" class="form-control text-bg-light"
							minlength="8" maxlength="25" required>
					</div>

					<div class="mb-4">
						<label for="password" class="form-label"> Confirmar contraseña </label>
						<input type="password" id="password1" name="password1" class="form-control text-bg-light"
							minlength="8" maxlength="25" required>
					</div>

					<div>
						<label for="rol" class="form-label"> Rol </label>
						<select id="rol" name="rol" class="form-control text-bg-light" minlength="1" maxlength="1"
							required>
							<option value="p">Personal</option>
							<option value="a">Administrador</option>
						</select requiered>
					</div>

					<input type="hidden" name="status" value="0">

					<br>

					{{#if error}}
					<p class="submitError">{{error}}</p>
					{{/if}}

					<div class="d-grid">
						<button type="submit" class="btn submitButton"> Registrar nuevo empleado </button>
					</div>


				</form>
			</div>
		</div>
	</div>
</body>

