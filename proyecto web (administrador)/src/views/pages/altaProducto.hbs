<script src="/js/validacionArticulo.js"></script>

<body>
	<script src="/src/public/js/script"></script>
	<div class="container w-50 px-5 pb-5 my-5">
		<div class="row">
			<div class="col">
				<h1 class="fw-bold text-center pt-5 mb-5"> Registro de productos </h1>
				<form class="form" action="/registraMen" method="post" enctype="multipart/form-data" onsubmit="return validar ();">


					<div class="mb-4">
						<label for="nombre" class="form-label"> Nombre </label>
						<input id="nombre" type="text" name="nombre" class="form-control text-bg-light"
							pattern="[A-Z a-z áéíóúÁÉÍÓÚñÑ]*" minlength="3" maxlength="255" required>
					</div>

					<div>
						<label for="tipo" class="form-label">Tipo de articulo</label>
							<select name="tipo" class="form-control text-bg-light" required>
								<option disabled>Seleccione el tipo de articulo</option>
								{{#each per}}
								<option value="{{tipo}}">{{descripcion_tip}}</option>
								{{/each}}
							</select>
					</div>

					<br>

					<div class="mb-4">
						<label for="descripcion" class="form-label"> Descripcion </label>
						<input id="descripcion" type="text" name="descripcion" class="form-control text-bg-light" 
						minlength="4" maxlength="1000"required>
					</div>

					<div class="mb-4">
						<label for="costo" class="form-label"> Costo </label>
						<input id="costo" type="money" name="costo" class="form-control text-bg-light"
						minlength="1" maxlength="100" pattern="[0-9]+" title="Pon numeros" required>
					</div>

					<div class="mb-4">
						<label for="precio" class="form-label"> Precio </label>
						<input id="precio" type="money" name="precio" class="form-control text-bg-light"
						minlength="1" maxlength="40" pattern="[0-9]+" title="Pon numeros" required>
					</div>

					<div class="mb-4">
						<label for="unidad" class="form-label"> Tipo unidad </label>
							<select name="unidad" class="form-control text-bg-light" required>
								<option disabled>Seleccione el tipo de articulo</option>
								{{#each uni}}
								<option value="{{unidad}}">{{nombre_uni}}</option>
								{{/each}}
							</select>
					</div>

					<div class="mb-4">
						<label for="existencia" class="form-label"> Existencia </label>
						<input id="existencia" name="existencia" class="form-control text-bg-light" 
						 minlength="1" maxlength="1000" pattern="[0-9]+" title="Pon numeros" required>
					</div>
					
					<label class="form-label">Imagen</label>
					<input type="file" name="image" accept=".jpg, .jpeg, .png"  class="form-control text-bg-light" >

					{{#if error}}
					<p class="submitError">{{error}}</p>
					{{/if}}

					<div class="d-grid">
						<button type="submit" class="btn submitButton"> Registrar nuevo producto </button>
					</div>


				</form>
			</div>
		</div>
	</div>
</body>

