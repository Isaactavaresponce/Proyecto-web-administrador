<!-- Llama a un archivo js-->
<script src="/js/validacion.js"></script>
<!-- Se crea el cuepo del archivo -->
<body>
	<!-- Llama a un archivo js-->
	<script src="/src/public/js/script"></script>
	<!-- Se crea una division-->
	<div class="container w-75 px-5 pb-5 my-5">
		<div class="row">
			<div class="col">
				<!-- Titulo del formulario -->
				<h1 class="fw-bold text-center pt-5 mb-5"> Cambio de Estado </h1>
				<!-- Ser crea un siclo que busca en todos los archivos json y escribe los datos -->
				{{#each per}}
				<!-- Se crea un formulario con la funcion de editar -->
				<form class="form" action="/editarStatus/{{Folio}}" method="post" onsubmit="return validars ();">

					<div class=" mb-4">
						<label for="Status" class="form-label"> Estado de producto(s) </label>
						<input  value="{{Status}}" type="text" id="Status" name="Status"
							class="form-control text-bg-light"
							pattern="[a-z]*" minlength="1" maxlength="1" required>
					</div>

					<!-- Se cierra el siclo-->
					{{/each}}

					<!-- Si se encuentra un error muestra el error -->
					{{#if error}}
						<p class="submitError">{{error}}</p>
					{{/if}}

					<div class="d-grid">
						<button type="submit" class="btn submitButton"> Guardar cambios </button>
					</div>


				</form>
			</div>
		</div>
	</div>

</body>